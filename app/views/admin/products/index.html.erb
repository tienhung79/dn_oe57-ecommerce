<section class="h-100 h-custom" style="background-color: #d2c9ff;">
  <div class="container py-5 h-100 cart__container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-12">
                <div class="p-5">
                  <div class="d-flex justify-content-between align-items-center mb-5">
                    <h1 class="fw-bold mb-0 text-black">Quản lý sản phẩm</h1>
                    <%= link_to new_admin_product_path, class: "text-decoration-none" do %>
                      <button type="button" class="btn btn-lg btn-success text-white fw-normal text-uppercase"><%= t("add_new_product") %></button>
                    <% end %>
                  </div>
                  <hr class="my-4">

                  <table class="table table-striped table-hover">
                    <thead class="bg-light">
                      <tr class="fs-4">
                        <th class="px-3 py-4">#</th>
                        <th class="px-3 py-4"><%= t("product_name") %></th>
                        <th class="px-3 py-4"><%= t("image") %></th>
                        <th class="px-3 py-4"><%= t("price") %></th>
                        <th class="px-3 py-4"><%= t("product_description") %></th>
                        <th class="px-3 py-4"><%= t("quantity") %></th>
                        <th class="px-3 py-4"><%= t("rating") %></th>
                        <th class="px-3 py-4"><%= t("category") %></th>
                        <th class="px-3 py-4"></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @products.each_with_index do |product, index| %>
                        <tr class="fs-5">
                          <td class="px-3 py-5"><%= index + 1 %></td>
                          <td class="px-3 py-5"><%= product.name %></td>

                          <td class="px-3 py-5">
                            <%= image_tag(product.image, alt: t("product_item"), class: "ad_image_products") %>
                          </td>

                          <td class="px-3 py-5"><%= product.price %></td>
                          <td class="px-3 py-5"><%= product.description %></td>
                          <td class="px-3 py-5"><%= product.quantity %></td>
                          <td class="px-3 py-5"><%= product.rating %></td>
                          <td class="px-3 py-5"><%= product.category.name %></td>

                          <td class="px-3 py-5 text-center">
                            <div class="d-grid gap-2 d-md-block">
                              <%= link_to product, class: "text-decoration-none" do %>
                                <button type="button" class="btn btn-lg btn-warning text-white fw-normal text-uppercase"><%= t("details") %></button>
                              <% end %>
                              <%= link_to edit_admin_product_path(product), class: "text-decoration-none" do %>
                                <button type="button" class="btn btn-lg btn-primary text-white fw-normal text-uppercase"><%= t("edit") %></button>
                              <% end %>
                              <%= link_to product, data: {"turbo-method": :delete, turbo_confirm: "You sure?"}, class: "text-decoration-none" do %>
                                <button type="button" class="btn btn-lg btn-danger text-white fw-normal text-uppercase"><%= t("delete") %></button>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                    <%== pagy_bootstrap_nav(@pagy) %>
                  </table>
                  <%== pagy_bootstrap_nav(@pagy) %>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
