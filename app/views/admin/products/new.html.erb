<section class="h-100 h-custom" style="background-color: #d2c9ff;">
  <div class="container py-5 h-100 cart__container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-12">
                <div class="p-5">

                  <div class="row justify-content-center p-5 m-5">
                    <div class="col-md-6 col-md-offset-3 login__form">
                      <div class="d-flex align-items-center">
                        <%= link_to admin_orders_path, class: "text-decoration-none" do %>
                          <i class="fa-solid fa-arrow-left fs-1 me-4 text-black"></i>
                        <% end %>
                        <h1 class="text-black fw-medium"><%= t("add_new_product") %></h1>
                      </div>

                      <div class="row">
                        <div class="col-md-12 col-md-offset-3 order__form">
                          <%= form_for @product, url: { action: "create" }, namespace: "admin"  do |f| %>
                            <%= render "shared/error_messages", object: f.object %>
                            <%= f.label :name, class: "fs-4 mt-3 mb-2" %><%= f.text_field :name, class: "form-control" %>
                            <%= f.label :price, class: "fs-4 mt-3 mb-2" %><%= f.text_field :price, class: "form-control" %>
                            <%= f.label :quantity, class: "fs-4 mt-3 mb-2" %><%= f.text_field :quantity, class: "form-control" %>
                            <%= f.hidden_field :rating, value: 0 %>
                            <%= f.label :description, class: "fs-4 mt-3 mb-2" %><%= f.text_area :description, class: "form-control" %>
                            <%= f.hidden_field :category_id, value: 0 %>

                            <%= f.label :category, class: "fs-4 mt-3 mb-2" %>

                            <%# <%= f.collection_select :category_id, @children_childrens, :id, :name, { }, { class: "form-control" } %>

                            <div class="menu__right-category px-2 d-flex justify-content-center">
                              <% @childrens.each do |children| %>
                                <ul class="mx-5"><%=  children.name%>
                                  <% @children_childrens.each do |children_children| %>
                                    <% if children.id == children_children.parent_id %>
                                      <li class="py-3"><%= f.radio_button :category_id, children_children.id %> <%= children_children.name %></li>
                                    <% end %>
                                  <% end %>
                                </ul>
                              <% end %>
                            </div>

                            <%= f.label :image, class: "fs-4 mt-3 mb-2" %>
                            <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png", class: "form-control" %>
                            <%= f.submit t("create"), class: "btn btn-primary mt-4 order__btn" %>
                          <% end %>
                        </div>
                      </div>

                    </div>
                  </div>

                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
