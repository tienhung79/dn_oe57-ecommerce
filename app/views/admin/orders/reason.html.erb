
<section class="h-100 h-custom" style="background-color: #d2c9ff;">
  <div class="container py-5 h-100 cart__container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-12">
                <div class="p-5">

                  <div class="row justify-content-center p-5 m-5">
                    <div class="col-md-6 col-md-offset-3 login__form">
                      <div class="d-flex align-items-center">
                        <%= link_to admin_orders_path, class: "text-decoration-none" do %>
                          <i class="fa-solid fa-arrow-left fs-1 me-4 text-black"></i>
                        <% end %>
                        <h1 class="text-black fw-medium"><%= t("cancel_order_confirmation") %></h1>
                      </div>
                        <%= form_tag admin_order_cancel_path, remote: true, method: :PATCH, class: "reason_form" do %>
                          <%= hidden_field_tag :order_id, @order.id %>
                          <%= label_tag :reason, "#{t("reason_order_cancellation")} :", class: "d-block py-2 fs-4" %>
                          <%= text_area_tag :reason %>
                          <%= submit_tag t("cancel"), class: "btn btn-danger fs-4 px-5 py-3 mt-3" %>
                        <% end %>
                    </div>
                  </div>

                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
