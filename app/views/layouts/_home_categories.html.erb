<h1 class="text-uppercase fw-bold"><%= t("categories") %></h1>
<ul class="categories_nav">
  <% @children.each do |children| %>
    <ul class="categories_nav-item-1"><%= link_to children.name, products_path(children.name) %>
      <% @children_children.each do |children_children| %>
        <% if children.id == children_children.parent_id %>
          <li class="categories_nav-item-2"><%= link_to children_children.name, products_path(children_children.name) %></li>
        <%end%>
      <%end%>
    </ul>
  <%end%>
</ul>
