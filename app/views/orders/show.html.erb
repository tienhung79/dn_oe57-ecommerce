<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <div class="d-flex align-items-center">
            <%= link_to orders_path, class: "text-decoration-none" do %>
              <i class="fa-solid fa-arrow-left fs-1 me-4 text-black"></i>
            <% end %>
            <h3 class="fw-normal mb-0 text-black text-uppercase"><%= t("order_details") %></h3>
          </div>
        </div>

        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center mt-5 mb-3">
                <div class="col-md-4 col-lg-4 col-xl-4">
                  <h5 class="mb-0 fs-4 fw-normal"><%= t("products") %></h5>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2">
                  <h5 class="mb-0 fs-4 fw-normal px-4"><%= t("quantity") %></h5>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2">
                  <h5 class="mb-0 fs-4 fw-normal px-4"><%= t("price") %></h5>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2">
                  <h5 class="mb-0 fs-4 fw-normal"><%= t("total_price") %></h5>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2">
                </div>
              </div>
            <% @order.order_details.each do |order_detail| %>
            <div class="row d-flex justify-content-between align-items-center my-3 text-black">
                  <div class="col-md-1 col-lg-1 col-xl-1">
                    <%= image_tag(order_detail.product_image, alt: t("product_item"), class: "img-fluid rounded-3") %>
                  </div>
                  <div class="col-md-3 col-lg-3 col-xl-3">
                    <p class="lead fw-normal mb-2 fs-5"><%= order_detail.product.category_name %></p>
                    <p class="lead fw-normal mb-2 fs-4"><%= order_detail.product_name %></p>
                  </div>
                  <div class="col-md-2 col-lg-2 col-xl-2">
                    <p class="lead fw-normal mb-2 fs-4">x <%= order_detail.quantity_product %></p>
                  </div>
                  <div class="col-md-2 col-lg-2 col-xl-2">
                    <p class="lead fw-normal mb-2 fs-4"><%= order_detail.product_price %></p>
                  </div>
                  <div class="col-md-2 col-lg-2 col-xl-2">
                    <p class="lead fw-normal mb-2 fs-4 px-3"><%= order_detail.price_product * order_detail.quantity_product %></p>
                  </div>
                  <div class="col-md-2 col-lg-2 col-xl-2">
                    <%= link_to t("rating"), new_feedback_path(product_id: order_detail.product_id),class: "text-decoration-none text-danger" %>
                  </div>
                  </div>
            <% end %>
            <div class="row d-flex justify-content-between align-items-center mt-5">
              <div class="col-md-6 col-lg-6 col-xl-6">

                <h5 class="text-<%=@order.status%> fs-4"><%= t("#{@order.status}")%></h5>

              </div>
              <div class="col-md-3 col-lg-3 col-xl-2">
                <h5 class="mb-0 text-danger fs-3"><span class="text-secondary me-3"><%= t("total_price") %>: </span><%= @order.total_price %></h5>
              </div>
            </div>
            <div class="row d-flex justify-content-end align-items-center mt-5">
              <div class="col-md-6 col-lg-3 col-xl-2">
                <% if @order.awaiting? %>
                  <button class="btn-base me-2 bg-danger"><%= t("cancel") %></button>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <table class="table table-bordered">
          <tbody>
            <tr class="fs-4">
              <td class="col-3 p-3"><%= t("reciver_name") %></td>
              <td class="col-8 p-3"><%= @order.reciver_name %></td>
            </tr>
            <tr class="fs-4">
              <td class="col-3 p-3"><%= t("reciver_address") %></td>
              <td class="col-8 p-3"><%= @order.reciver_address %></td>
            </tr>
            <tr class="fs-4">
              <td class="col-3 p-3"><%= t("reciver_phone") %></td>
              <td class="col-8 p-3"><%= @order.reciver_phone %></td>
            </tr>
            <tr class="fs-4">
              <td class="col-3 p-3"><%= t("date_time_order") %></td>
              <td class="col-8 p-3"><%= @order.created_at %></td>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</section>
