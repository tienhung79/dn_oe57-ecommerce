<div class="card rounded-3 mb-4">
  <div class="card-body p-4">

    <%= (render order.order_details) || t("no_order_display") %>

    <div class="row d-flex justify-content-between align-items-center mt-5">
      <div class="col-md-6 col-lg-6 col-xl-6">

        <h5 class="text-danger fs-4"><%= t("#{order.status}") %></h5>

      </div>
    <div class="col-md-3 col-lg-3 col-xl-3">
        <h5 class="mb-0 text-danger fs-4"><span class="text-secondary me-3"><%= t("total_price") %>: </span><%= order.total_price %></h5>
      </div>
    </div>
    <div class="row d-flex justify-content-end align-items-center mt-5">
      <div class="col-md-6 col-lg-3 col-xl-3">
        <% if order.awaiting? %>
          <button class="btn-base me-2 bg-danger"><%= t("cancel") %></button>
        <% end %>
        <%= link_to order, class: "text-decoration-none" do %>
          <button class="btn-base bg-light text-black"><%= t("details") %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>
